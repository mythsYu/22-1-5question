#include<stdio.h>
#include<conio.h>
#include<windows.h>
#include "move.h"
int main() {
	char m[20][20] = { "######",
					 "#O #  ",
					 "# ## #",
					 "#  # #",
					 "##   #",
					 "######" };
	int i, x, y, p, q;
	x = 1, y = 1, p = 1, q = 5;
	char ch;
	for (i = 0; i < 6; i++)
		puts(m[i]);
	while (x != p || y != q)
	{
		ch = _getch();
		move(m, ch, &x, &y);
		system("cls");
		for (i = 0; i < 6; i++)
			puts(m[i]);

	}
	printf("Congratulations on winning the maze !");
	return 0;
}
